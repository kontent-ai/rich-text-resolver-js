{
  "name": "@kontent-ai/rich-text-resolver-monorepo",
  "private": true,
  "description": "Kontent.ai rich text element resolver and PortableText transformer - Monorepo",
  "license": "MIT",
  "author": "Daniel Pokorny",
  "type": "module",
  "packageManager": "pnpm@10.18.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kontent-ai/rich-text-resolver-js.git"
  },
  "scripts": {
    "build": "turbo run build  --log-order=grouped",
    "test": "turbo run test --log-order=grouped",
    "test:coverage": "turbo run test:coverage --log-order=grouped",
    "test:watch": "turbo run test:watch --log-order=grouped",
    "lint": "turbo run lint --log-order=grouped",
    "biome": "turbo run biome",
    "biome:check": "turbo run biome:check --log-order=grouped",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.7",
    "@kontent-ai/biome-config": "^0.5.1",
    "@kontent-ai/delivery-sdk": "^16.3.0",
    "@kontent-ai/eslint-config": "^2.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "jsdom": "^27.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ts-pattern": "^5.8.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
