{
  "name": "@kontent-ai/rich-text-resolver-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:react",
    "build:core": "npm run build -w packages/core",
    "build:react": "npm run build -w packages/react",
    "test": "jest",
    "test:core": "jest --selectProjects core",
    "test:react": "jest --selectProjects react",
    "lint": "eslint packages/core/src packages/react/src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf packages/*/dist"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-kontent-ai": "^0.1.8",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3"
  }
}
