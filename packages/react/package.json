{
    "name": "@kontent-ai/rich-text-resolver-react",
    "version": "3.0.0",
    "description": "React utilities for Kontent.ai rich text resolver",
    "main": "./dist/legacy/index.js",
    "module": "./dist/esnext/index.js",
    "browser": "./dist/legacy/index.js",
    "types": "./dist/esnext/index.d.ts",
    "type": "module",
    "repository": {
      "type": "git",
      "url": "https://github.com/kontent-ai/rich-text-resolver-js.git",
      "directory": "packages/react"
    },
    "exports": {
      ".": {
        "import": "./dist/esnext/index.js",
        "require": "./dist/legacy/index.js"
      }
    },
    "scripts": {
      "build:esnext": "tsc",
      "build:legacy": "swc src --out-dir dist/legacy && swc index.ts --out-file dist/legacy/index.js",
      "build": "npm run build:esnext && npm run build:legacy",
      "test": "jest",
      "lint": "eslint . --ext ts,tsx"
    },
    "peerDependencies": {
      "react": ">=18.0.0",
      "@kontent-ai/rich-text-resolver": "^3.0.0"
    },
    "dependencies": {
      "@portabletext/react": "^3.2.1",
      "@portabletext/types": "^2.0.13"
    },
    "devDependencies": {
      "@kontent-ai/delivery-sdk": "^16.0.0",
      "@kontent-ai/rich-text-resolver": "*",
      "@testing-library/react": "^16.3.0",
      "@types/react": "^19.1.0",
      "react": "^19.1.0"
    },
    "publishConfig": {
      "access": "public",
      "registry": "https://registry.npmjs.org/"
    }
  }